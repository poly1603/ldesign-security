{
  "name": "@ldesign/security",
  "version": "2.3.0",
  "description": "LDesign 企业级安全工具 - 全面的项目安全扫描、漏洞检测、代码审计、合规检查和容器安全",
  "keywords": [
    "ldesign",
    "security",
    "vulnerability",
    "audit",
    "scanning",
    "npm-audit",
    "dependencies"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "docs": "typedoc",
    "docker:build": "docker build -t ldesign/security:latest .",
    "docker:run": "docker-compose up"
  },
  "dependencies": {
    "@ldesign/kit": "workspace:*",
    "eslint": "^9.18.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "commander": "^12.0.0",
    "cli-table3": "^0.6.3",
    "boxen": "^7.1.1",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "pdfkit": "^0.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/fs-extra": "^11.0.4",
    "@types/pdfkit": "^0.13.0",
    "@vitest/coverage-v8": "^1.6.1",
    "typescript": "^5.7.3",
    "tsup": "^8.0.0",
    "vitest": "^1.6.1",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.0"
  },
  "bin": {
    "ldesign-security": "./bin/cli.js",
    "lsec": "./bin/cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

